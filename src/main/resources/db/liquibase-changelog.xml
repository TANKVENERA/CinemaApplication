<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="belski">
        <createTable tableName="visitor">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="order">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="visitor" baseColumnNames="order_id"
                                 constraintName="fk_visitor_order"
                                 referencedTableName="order" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="03" author="belski">
        <addColumn tableName="order">
            <column name="visitor_id" type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="order" baseColumnNames="visitor_id"
                                 constraintName="fk_visitor"
                                 referencedTableName="visitor" referencedColumnNames="id"/>

    </changeSet>

    <changeSet id="04" author="belski">
        <renameTable oldTableName="order" newTableName="filmticket" />
    </changeSet>

    <changeSet id="05" author="belski">
        <addColumn tableName="filmticket">
            <column name="film_id" type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="06" id="belski">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="1"
                          tableName="filmticket"/>
    </changeSet>

    <changeSet id="07" author="belski">
        <addForeignKeyConstraint baseTableName="filmticket" baseColumnNames="visitor_id"
                                 constraintName="fk_visitor"
                                 referencedTableName="visitor" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="08" author="belski">
        <renameTable oldTableName="visitor" newTableName="user" />
    </changeSet>

    <changeSet id="09" author="belski">
       <renameColumn tableName="filmticket" oldColumnName="seatNumber" newColumnName="seat" columnDataType="int"/>
    </changeSet>

</databaseChangeLog>